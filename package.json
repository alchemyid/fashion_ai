{
  "name": "fashion-ai-generator",
  "version": "1.0.0",
  "author": "Fashion AI Team <info@girirahayu.id>",
  "description": "AI Fashion Image Generator",
  "main": "main.js",
  "scripts": {
    "clean": "rm -rf dist app_build app.asar",
    "cleanwin": "rmdir /s /q dist app_build & del /f /s /q app.asar",
    "obfuscate": "node protect.js",
    "build:win": "npm run cleanwin && npm run obfuscate && electron-builder --win",
    "build:mac": "npm run clean && npm run obfuscate && electron-builder --mac",
    "build:linux": "npm run clean && npm run obfuscate && electron-builder --linux",
    "start": "electron . --no-sandbox"
  },
  "build": {
    "appId": "com.fashionai.generator",
    "productName": "Fashion AI Generator",
    "asar": true,
    "directories": {
      "app": "app_build",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      ".env.example"
    ],
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icons/icon.png"
    },
    "linux": {
      "target": ["AppImage","deb"],
      "maintainer": "Fashion AI Team <info@girirahayu.id>",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.1",
    "electron-store": "^8.1.0",
    "express": "^4.20.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "node-fetch": "^2.6.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "javascript-obfuscator": "^4.1.1"
  }
}