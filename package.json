{
  "name": "fashion-ai-generator",
  "version": "1.0.0",
  "description": "AI Fashion Image Generator",
  "main": "main.js",
  "scripts": {
    "obfuscate": "javascript-obfuscator src --output dist --compact true --control-flow-flattening true --self-defending true --string-array true --string-array-encoding base64 --string-array-threshold 1",
    "start": "electron . --no-sandbox",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.fashionai.generator",
    "productName": "Fashion AI Generator",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md}",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "javascript-obfuscator": "^4.1.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.1",
    "electron-store": "^8.1.0",
    "express": "^4.20.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "node-fetch": "^2.6.7",
    "uuid": "^8.3.2"
  }
}
