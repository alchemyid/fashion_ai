{
  "name": "fashion-ai-generator",
  "version": "1.0.0",
  "description": "AI Fashion Image Generator",
  "main": "main.js",

  "scripts": {
    "clean": "rm -rf dist app && mkdir app",
    "obfuscate": "javascript-obfuscator src --output app --config obf.json",
    "asar": "asar pack app app.asar",
    "prebuild": "npm run clean && npm run obfuscate && npm run asar",
    "start": "electron . --no-sandbox",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },

  "build": {
    "asar": true,
    "appId": "com.fashionai.generator",
    "productName": "Fashion AI Generator",
    "files": [
      "app.asar",
      "assets/**/*",
      "!src",
      "!dist",
      "!obf"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": ["AppImage","deb"],
      "icon": "assets/icons/icon.png",
      "category": "Graphics"
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },

  "devDependencies": {
    "asar": "^3.2.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "javascript-obfuscator": "^4.1.1"
  },

  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.1",
    "electron-store": "^8.1.0",
    "express": "^4.20.0",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "node-fetch": "^2.6.7",
    "uuid": "^8.3.2"
  }
}
